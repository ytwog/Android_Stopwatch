<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.example.applicationtimer">

    <dist:module dist:instant="true" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TabbedStopwatch"
            android:label="@string/title_activity_tabbed_stopwatch"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".database"
            android:label="@string/_fullName"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.applicationtimer.MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/_fullName" />
        <activity android:name=".MainActivity">
            android:label="@string/_fullName"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>