<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    tools:context=".commonItems_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <View
        android:id="@+id/viewLine"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/lineButton"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:contentDescription="â€”"
        android:src="@mipmap/_item_line"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/viewResistor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tintMode="add" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/_item_line"
        android:textColor="#805206"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewLine"
        app:layout_constraintEnd_toEndOf="@+id/viewLine"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewResistor"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewLine"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/_item_resistor"
        android:textColor="#805206"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewLine"
        app:layout_constraintEnd_toEndOf="@+id/viewResistor"
        app:layout_constraintStart_toStartOf="@+id/viewResistor" />

    <ImageButton
        android:id="@+id/resistButton"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        android:contentDescription="R"
        android:src="@mipmap/_item_resistor"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="@+id/viewResistor"
        app:layout_constraintStart_toStartOf="@+id/viewResistor"
        app:layout_constraintTop_toTopOf="@+id/viewResistor" />

</androidx.constraintlayout.widget.ConstraintLayout>